# User/Group IDs - Run 'id' command to get your values
PUID=1000
PGID=1000

# Timezone - https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/New_York

# Paths - Adjust these to your system
CONFIG_PATH=./config
DATA_PATH=./data
DOWNLOADS_PATH=./data/downloads
MEDIA_PATH=/path/to/your/media  # UPDATE THIS - Shared with Windows Plex

# Traefik (optional - for domain access)
DOMAIN=homelab.local
# ACME_EMAIL=your-email@example.com  # Uncomment for Let's Encrypt

# VPN - Surfshark Configuration
VPN_SERVICE_PROVIDER=surfshark
VPN_TYPE=wireguard  # or openvpn
WIREGUARD_PRIVATE_KEY=your_wireguard_private_key_here  # Get from Surfshark dashboard
WIREGUARD_ADDRESSES=10.x.x.x/16  # Get from Surfshark dashboard
SERVER_COUNTRIES=United States  # Preferred VPN server location

# Alternative: OpenVPN credentials (if using openvpn instead of wireguard)
# OPENVPN_USER=your_surfshark_username
# OPENVPN_PASSWORD=your_surfshark_password

# Usenet Provider
USENET_HOST=news.your-provider.com
USENET_PORT=563
USENET_USERNAME=your_usenet_username
USENET_PASSWORD=your_usenet_password
USENET_CONNECTIONS=20

# API Keys (generated after first setup - used by Recyclarr)
SONARR_API_KEY=
RADARR_API_KEY=
LIDARR_API_KEY=
PROWLARR_API_KEY=
